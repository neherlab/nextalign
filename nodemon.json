{
  "quiet": true,
  "legacyWatch": false,
  "delay": 0.1,
  "watch": [
    "CMakeLists.txt",
    "conanfile.txt",
    "src/*",
    "scripts/*",
    "tests/*"
  ],
  "ext": ".cpp,.h,.hpp,.cxx,.c,.txt,.cmake,.sh",
  "ignore": [".build", "node_modules"],
  "exec": "reset; bash -c 'CMAKE_BUILD_TYPE=Debug ./scripts/build_locally.sh' || cd ."
}
